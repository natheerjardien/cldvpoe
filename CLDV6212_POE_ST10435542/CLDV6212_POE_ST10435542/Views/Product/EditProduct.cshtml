@model CLDV6212_POE_ST10435542.Models.Product

@{
    ViewData["Title"] = "EditProduct";
}

@* I made use of Razor View to generate this view and made minor tweaks to my liking *@

<h1>Edit Product Info</h1>
<p></p>
<h4>Product</h4>
<p></p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="RowKey" /> @* included these hidden properties because they are key elements tied to each product, else if not included, the procut will not be saved to the table *@

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile" class="control-label">Upload New Image:</label>
                <div style="display:flex; align-items:center;">
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" style="width:auto; display:inline-block;" />
                    <span style="margin-left:10px;">
                        @System.IO.Path.GetFileName(Model.ImageUrl) @* display the current image file name - reused code from Semester 3 POE *@
                    </span>
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Change Category:</label>
                <select asp-for="Category" class="form-select" asp-items="ViewBag.Categories">
                    @* using the predefined list from the Controller *@
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailabilityStatus" class="control-label"></label>
                <select asp-for="AvailabilityStatus" class="form-control" asp-items="ViewBag.AvailabilityStatuses"> @* ViewBag to populate the dropdown list for availabity because ViewData List wasnt passing the items correctly*@
                    <option value="">-- Select Availability Status --</option>
                </select>
                <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@* query lists for edit view *@
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
