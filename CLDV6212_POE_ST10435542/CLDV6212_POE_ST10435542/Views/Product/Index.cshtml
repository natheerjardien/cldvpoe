@model IEnumerable<CLDV6212_POE_ST10435542.Models.Product>

@{
    ViewData["Title"] = "Index";
}

@* I made use of Razor View to generate this view and made minor tweaks to my liking *@

<p></p>
<h1>Product Management</h1>
<p></p>
<h4>Products🛍️</h4>
<hr />
<p></p>
<p>
    <a asp-action="AddProduct" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>
                Product:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description):
            </th>
            <th>
                Category:
            </th>
            <th>
                Availability:
            </th>
            <th>
                Image:
            </th>
            <th>
                Action:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailabilityStatus)
            </td>
            <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 100px; height: auto;" />
                    }
            </td>
                <td>
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@item.RowKey" />
                        <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Product?');"> Delete </button>
                    </form>
                    <a asp-action="ViewProduct" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey" class="btn btn-outline-primary">Details</a>
                </td>
        </tr>
}
    </tbody>
</table>
