@model CLDV6212_POE_ST10435542.Models.User
@{
    ViewData["Title"] = "Login";
}

@* Custom styled login form with a card layout *@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <p></p>
                    <h3 class="card-title text-center">Login</h3>

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                        }

                        <div class="form-group">
                            <label asp-for="Role" class="form-label">Role</label>
                            <select asp-for="Role" class="form-control" placeholder="Select Role" required>
                                <option value="">Select a role</option>
                                <option value="Admin">Admin</option>
                                <option value="Customer">Customer</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            @* Placed hints in the form with placeholders *@
                            <input asp-for="Username" name="Username" class="form-control" placeholder="Type 'admin' to Login" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            @* Placed hints in the form with placeholders *@
                            <input asp-for="Password" name="Password" type="password" class="form-control" placeholder="Type '123' to login" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <p></p>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <hr />

                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Register Here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>