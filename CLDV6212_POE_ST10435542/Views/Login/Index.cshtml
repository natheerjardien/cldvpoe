@* Custom styled login form with a card layout *@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <p></p>
                    <h3 class="card-title text-center">Login</h3>
                    <form asp-action="Login" method="post">
                        @* Placed hints in the form with placeholders *@
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="Username" class="form-control" placeholder="Type 'admin' to Login" required />
                        </div>
                        @* Placed hints in the form with placeholders *@
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="Password" class="form-control" placeholder="Type '123' to login" required />
                        </div>
                        @* Custom styled buttons based on the bootstrap theme that was implemented into this website *@
                        @* Button styling using Lux theme from Bootswatch (2025) *@
                        <p></p>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
